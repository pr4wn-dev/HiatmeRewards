<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HiatMeApp.Controls.TopBar"
             HeightRequest="61">
    <Grid BackgroundColor="{StaticResource WebsiteDark}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="14"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Blue accent bar on left -->
        <BoxView Grid.Column="0" 
                 BackgroundColor="{StaticResource WebsiteAccent}" />
        
        <!-- Hamburger Menu Button -->
        <Button Grid.Column="1"
                Text="&#xE5D2;"
                FontFamily="MaterialIcons"
                FontSize="44"
                BackgroundColor="Transparent"
                TextColor="White"
                Padding="8,0"
                Margin="0"
                Clicked="OnMenuButtonClicked"
                VerticalOptions="Center"
                HorizontalOptions="Start"
                WidthRequest="56"
                HeightRequest="56" />
        
        <!-- Empty spacer to balance burger menu -->
        <BoxView Grid.Column="2"
                 BackgroundColor="Transparent" />
        
        <!-- Logo Text - centered in the app -->
        <Label Grid.Column="3"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="HERE" 
                          TextColor="White" 
                          FontSize="38"
                          FontFamily="Arial"
                          FontAttributes="Bold" />
                    <Span Text="IAM" 
                          TextColor="#007BFF" 
                          FontSize="38"
                          FontFamily="Arial"
                          FontAttributes="Bold" />
                </FormattedString>
            </Label.FormattedText>
        </Label>
        
        <!-- Empty spacer on right to balance -->
        <BoxView Grid.Column="4"
                 BackgroundColor="Transparent" />
    </Grid>
</ContentView>

