<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HiatMeApp.Controls.TopBar"
             HeightRequest="61">
    <Grid BackgroundColor="{StaticResource WebsiteDark}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="14"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Blue accent bar on left -->
        <BoxView Grid.Column="0" 
                 BackgroundColor="{StaticResource WebsiteAccent}" />
        
        <!-- Hamburger Menu Button -->
        <Button Grid.Column="1"
                Text="&#xE5D2;"
                FontFamily="MaterialIcons"
                FontSize="44"
                BackgroundColor="Transparent"
                TextColor="White"
                Padding="32,0"
                Margin="0"
                Clicked="OnMenuButtonClicked"
                VerticalOptions="Center"
                WidthRequest="88"
                HeightRequest="88" />
        
        <!-- Logo Text - centered in remaining space -->
        <AbsoluteLayout Grid.Column="2"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">
            <Label AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
                   AbsoluteLayout.LayoutFlags="PositionProportional"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="HERE" 
                              TextColor="White" 
                              FontSize="38"
                              FontFamily="Arial"
                              FontAttributes="Bold" />
                        <Span Text="IAM" 
                              TextColor="#007BFF" 
                              FontSize="38"
                              FontFamily="Arial"
                              FontAttributes="Bold" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </AbsoluteLayout>
    </Grid>
</ContentView>

