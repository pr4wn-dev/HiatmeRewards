<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HiatMeApp.Controls.TopBar"
             HeightRequest="61">
    <AbsoluteLayout BackgroundColor="{StaticResource WebsiteDark}">
        <!-- Blue accent bar on left -->
        <BoxView AbsoluteLayout.LayoutBounds="0,0,14,61"
                 AbsoluteLayout.LayoutFlags="None"
                 BackgroundColor="{StaticResource WebsiteAccent}" />
        
        <!-- Hamburger Menu Button -->
        <Button AbsoluteLayout.LayoutBounds="14,2.5,-1,56"
                AbsoluteLayout.LayoutFlags="None"
                Text="&#xE5D2;"
                FontFamily="MaterialIcons"
                FontSize="44"
                BackgroundColor="Transparent"
                TextColor="White"
                Padding="8,0"
                Margin="0"
                Clicked="OnMenuButtonClicked"
                WidthRequest="56"
                HeightRequest="56" />
        
        <!-- Logo Image - centered at 50% of full width -->
        <Image AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               Source="hereiam.png"
               Aspect="AspectFit"
               HeightRequest="30"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
    </AbsoluteLayout>
</ContentView>

