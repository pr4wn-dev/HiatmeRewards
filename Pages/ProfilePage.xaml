<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HiatMeApp.Controls"
             xmlns:converters="clr-namespace:HiatMeApp.Converters"
             x:Class="HiatMeApp.ProfilePage"
             Title="{Binding Title}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid RowDefinitions="*,Auto">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="Profile" FontSize="24" HorizontalOptions="Center" FontAttributes="Bold" />
                
                <!-- Profile Picture -->
                <Frame HorizontalOptions="Center" Padding="10" BorderColor="LightGray" CornerRadius="5" Margin="0,10,0,20">
                    <VerticalStackLayout Spacing="10">
                        <Image x:Name="ProfileImage"
                               HeightRequest="120" 
                               WidthRequest="120"
                               Aspect="AspectFill"
                               HorizontalOptions="Center" />
                        <Button Text="Change Picture" 
                                Command="{Binding PickImageCommand}"
                                IsVisible="{Binding IsEditing}"
                                HorizontalOptions="Center"
                                Padding="10,5" />
                    </VerticalStackLayout>
                </Frame>
                
                <!-- User Information -->
                <Frame Padding="15" BorderColor="LightGray" CornerRadius="5">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Name" FontSize="14" FontAttributes="Bold" />
                        <Label Text="{Binding Name}" 
                               FontSize="16" 
                               IsVisible="{Binding IsEditing, Converter={StaticResource InverseBooleanConverter}}" />
                        <Entry Text="{Binding Name}" 
                               FontSize="16"
                               IsVisible="{Binding IsEditing}"
                               Placeholder="Enter your name" />
                        
                        <Label Text="Email" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0" />
                        <Label Text="{Binding Email}" 
                               FontSize="16"
                               IsVisible="{Binding IsEditing, Converter={StaticResource InverseBooleanConverter}}" />
                        <Entry Text="{Binding Email}" 
                               FontSize="16"
                               Keyboard="Email"
                               IsVisible="{Binding IsEditing}"
                               Placeholder="Enter your email" />
                        
                        <Label Text="Phone" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0" />
                        <Label Text="{Binding Phone, TargetNullValue='Not provided'}" 
                               FontSize="16"
                               IsVisible="{Binding IsEditing, Converter={StaticResource InverseBooleanConverter}}" />
                        <Entry Text="{Binding Phone}" 
                               FontSize="16"
                               Keyboard="Telephone"
                               IsVisible="{Binding IsEditing}"
                               Placeholder="Enter your phone number" />
                        
                        <Label Text="Role" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0" />
                        <Label Text="{Binding Role}" FontSize="16" />
                    </VerticalStackLayout>
                </Frame>
                
                <!-- Action Buttons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                    <Button Text="Edit" 
                            Command="{Binding StartEditingCommand}"
                            IsVisible="{Binding IsEditing, Converter={StaticResource InverseBooleanConverter}}"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            BackgroundColor="#007ACC"
                            TextColor="White" />
                    
                    <Button Text="Cancel" 
                            Command="{Binding CancelEditingCommand}"
                            IsVisible="{Binding IsEditing}"
                            Grid.Column="0"
                            BackgroundColor="Gray"
                            TextColor="White" />
                    
                    <Button Text="Save" 
                            Command="{Binding SaveProfileCommand}"
                            IsVisible="{Binding IsEditing}"
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                            Grid.Column="1"
                            BackgroundColor="#28A745"
                            TextColor="White" />
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
        <local:NavigationBar Grid.Row="1" />
    </Grid>
</ContentPage>

