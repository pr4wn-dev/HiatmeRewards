<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:HiatMeApp.Controls"
             xmlns:converters="clr-namespace:HiatMeApp.Converters"
             x:Class="HiatMeApp.FinishDayPage"
             Title="{Binding Title}"
             BackgroundColor="#333333"
             Shell.NavBarIsVisible="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto">
        <controls:TopBar Grid.Row="0" />
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="Finish Your Day"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,10,0,5" />
                <BoxView HeightRequest="2"
                         BackgroundColor="#28a745"
                         HorizontalOptions="FillAndExpand"
                         Margin="0,0,0,15" />

                <!-- Main Card -->
                <Frame BackgroundColor="#3A3A3A"
                       BorderColor="#555555"
                       CornerRadius="12"
                       Padding="25"
                       Margin="0,10,0,0">
                    <VerticalStackLayout Spacing="20" HorizontalOptions="Center">
                        <!-- Icon -->
                        <Frame BackgroundColor="#28a745"
                               CornerRadius="40"
                               WidthRequest="80"
                               HeightRequest="80"
                               Padding="0"
                               HasShadow="False"
                               HorizontalOptions="Center">
                            <Label Text="✅"
                                   FontSize="40"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Frame>

                        <!-- Instructions -->
                        <Label Text="Ready to wrap up?"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center" />
                        
                        <Label Text="Submit your ending mileage to complete your workday. Make sure your odometer reading is accurate before submitting."
                               FontSize="15"
                               TextColor="#AAAAAA"
                               HorizontalTextAlignment="Center"
                               HorizontalOptions="Center"
                               Margin="0,0,0,10" />

                        <!-- Steps -->
                        <Frame BackgroundColor="#444444"
                               BorderColor="Transparent"
                               CornerRadius="8"
                               Padding="15">
                            <VerticalStackLayout Spacing="12">
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                    <Frame Grid.Column="0"
                                           BackgroundColor="#007BFF"
                                           CornerRadius="12"
                                           WidthRequest="24"
                                           HeightRequest="24"
                                           Padding="0"
                                           HasShadow="False">
                                        <Label Text="1"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center" />
                                    </Frame>
                                    <Label Grid.Column="1"
                                           Text="Check your vehicle's odometer"
                                           FontSize="14"
                                           TextColor="White"
                                           VerticalOptions="Center" />
                                </Grid>

                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                    <Frame Grid.Column="0"
                                           BackgroundColor="#007BFF"
                                           CornerRadius="12"
                                           WidthRequest="24"
                                           HeightRequest="24"
                                           Padding="0"
                                           HasShadow="False">
                                        <Label Text="2"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center" />
                                    </Frame>
                                    <Label Grid.Column="1"
                                           Text="Tap the button below"
                                           FontSize="14"
                                           TextColor="White"
                                           VerticalOptions="Center" />
                                </Grid>

                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                    <Frame Grid.Column="0"
                                           BackgroundColor="#007BFF"
                                           CornerRadius="12"
                                           WidthRequest="24"
                                           HeightRequest="24"
                                           Padding="0"
                                           HasShadow="False">
                                        <Label Text="3"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center" />
                                    </Frame>
                                    <Label Grid.Column="1"
                                           Text="Enter your ending miles"
                                           FontSize="14"
                                           TextColor="White"
                                           VerticalOptions="Center" />
                                </Grid>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Loading Indicator -->
                        <ActivityIndicator IsRunning="{Binding IsBusy}"
                                           IsVisible="{Binding IsBusy}"
                                           Color="#28a745"
                                           HorizontalOptions="Center" />

                        <!-- Submit Button -->
                        <Button Text="🏁 Finish My Day"
                                FontSize="20"
                                FontAttributes="Bold"
                                WidthRequest="280"
                                HeightRequest="60"
                                HorizontalOptions="Center"
                                CornerRadius="10"
                                BackgroundColor="#28a745"
                                TextColor="White"
                                Command="{Binding SubmitEndOfDayCommand}"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Tips Section -->
                <Frame BackgroundColor="#444444"
                       BorderColor="#555555"
                       CornerRadius="10"
                       Padding="15"
                       Margin="0,10,0,0">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="💡 Quick Tips"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#ffc107" />
                        <Label Text="• Make sure the vehicle is parked safely before recording"
                               FontSize="13"
                               TextColor="#CCCCCC" />
                        <Label Text="• Double-check your mileage reading for accuracy"
                               FontSize="13"
                               TextColor="#CCCCCC" />
                        <Label Text="• Report any vehicle issues before finishing"
                               FontSize="13"
                               TextColor="#CCCCCC" />
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
        <controls:NavigationBar Grid.Row="2" />
    </Grid>
</ContentPage>
