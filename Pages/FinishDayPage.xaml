<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:HiatMeApp.Controls"
             x:Class="HiatMeApp.FinishDayPage"
             Title="{Binding Title}">
    <Grid RowDefinitions="*,Auto">
        <Label Text="Finish Day Page (Placeholder)"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontSize="18" />
        <Button
            Text="Finish My Day"
            BackgroundColor="{DynamicResource Primary}"
            TextColor="White"
            CornerRadius="12"
            HeightRequest="60"
            FontSize="18"
            HorizontalOptions="Center"
            Margin="20,40"
            Command="{Binding SubmitEndOfDayCommand}"
            IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBooleanConverter}}"
            Grid.Row="0" />
        <controls:NavigationBar Grid.Row="1" />
    </Grid>
</ContentPage>