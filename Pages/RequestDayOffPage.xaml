<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:HiatMeApp.Controls"
             xmlns:converters="clr-namespace:HiatMeApp.Converters"
             x:Class="HiatMeApp.RequestDayOffPage"
             Title="{Binding Title}"
             BackgroundColor="#333333"
             Shell.NavBarIsVisible="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <converters:NotNullConverter x:Key="NotNullConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid RowDefinitions="Auto,*,Auto">
        <controls:TopBar Grid.Row="0" />
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="12">
                <controls:PageHeader Title="Day Off Requests"
                                     Subtitle="Submit and view time off requests"
                                     Icon="ðŸ“…"
                                     AccentColor="#8b5cf6" />
                
                <VerticalStackLayout Padding="20,0,20,20" Spacing="12">
                <!-- Toggle Button for Request Form -->
                <Button Text="{Binding FormToggleButtonText}"
                        FontSize="16"
                        Command="{Binding ToggleFormCommand}"
                        BackgroundColor="#007bff"
                        TextColor="White"
                        Padding="20,12"
                        HorizontalOptions="Center"
                        Margin="0,0,0,10" />

                <!-- Collapsible Request Form -->
                <Frame BackgroundColor="#3a3a3a"
                       BorderColor="#555555"
                       CornerRadius="10"
                       Padding="15"
                       IsVisible="{Binding IsFormVisible}"
                       Margin="0,0,0,10">
                    <VerticalStackLayout Spacing="15">
                        
                        <Label Text="New Day Off Request"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#007BFF"
                               HorizontalOptions="Center" />

                        <Label Text="Select Date" 
                               FontSize="16"
                               TextColor="#87CEEB" />
                        <DatePicker Date="{Binding SelectedDate}"
                                    MinimumDate="{Binding MinimumDate}"
                                    BackgroundColor="#444"
                                    TextColor="White" />

                        <Label Text="Optional: pick a time range if you don't need the whole day off."
                               FontSize="14"
                               TextColor="#AAAAAA"
                               HorizontalOptions="Center" />

                        <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="Start Time"
                                       FontSize="14"
                                       TextColor="#87CEEB"
                                       HorizontalOptions="Center" />
                                <TimePicker Time="{Binding StartTime}"
                                            Format="HH:mm"
                                            BackgroundColor="#444"
                                            TextColor="White" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Spacing="5">
                                <Label Text="End Time"
                                       FontSize="14"
                                       TextColor="#87CEEB"
                                       HorizontalOptions="Center" />
                                <TimePicker Time="{Binding EndTime}"
                                            Format="HH:mm"
                                            BackgroundColor="#444"
                                            TextColor="White" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>

                        <Label Text="Reason (optional)" 
                               FontSize="16"
                               TextColor="#87CEEB" />
                        <Border Stroke="#666666"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 4,4,4,4"
                                BackgroundColor="#444444"
                                Padding="10">
                            <Editor Placeholder="Enter reason for day off request..."
                                    AutoSize="TextChanges"
                                    Text="{Binding Reason}"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    PlaceholderColor="#AAAAAA"
                                    MinimumHeightRequest="80" />
                        </Border>

                        <ActivityIndicator IsRunning="{Binding IsBusy}"
                                           IsVisible="{Binding IsBusy}"
                                           Color="White"
                                           HorizontalOptions="Center" />

                        <Button Text="Submit Request"
                                FontSize="16"
                                Command="{Binding SubmitRequestCommand}"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                                BackgroundColor="#28a745"
                                TextColor="White" />
                    </VerticalStackLayout>
                </Frame>

                <!-- My Requests Section -->
                <BoxView HeightRequest="1"
                         BackgroundColor="#555555"
                         HorizontalOptions="FillAndExpand"
                         Margin="0,5,0,10" />

                <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,5">
                    <Label Text="My Requests"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center" />
                    <Button Grid.Column="1"
                            Text="â†»"
                            FontSize="18"
                            Command="{Binding LoadMyRequestsCommand}"
                            BackgroundColor="#6c757d"
                            TextColor="White"
                            Padding="12,6"
                            WidthRequest="45"
                            IsEnabled="{Binding IsLoadingRequests, Converter={StaticResource InverseBooleanConverter}}" />
                </Grid>

                <!-- Loading indicator for requests -->
                <ActivityIndicator IsRunning="{Binding IsLoadingRequests}"
                                   IsVisible="{Binding IsLoadingRequests}"
                                   Color="White"
                                   HorizontalOptions="Center"
                                   Margin="0,10,0,10" />

                <!-- Error message -->
                <Label Text="{Binding RequestsErrorMessage}"
                       IsVisible="{Binding RequestsErrorMessage, Converter={StaticResource NotNullConverter}}"
                       TextColor="#dc3545"
                       FontSize="14"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10" />

                <!-- No requests message -->
                <Frame BackgroundColor="#444444"
                       BorderColor="#555555"
                       CornerRadius="8"
                       Padding="20"
                       IsVisible="{Binding HasRequests, Converter={StaticResource InverseBooleanConverter}}"
                       Margin="0,0,0,10">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="No requests yet."
                               TextColor="#AAAAAA"
                               FontSize="16"
                               HorizontalTextAlignment="Center" />
                        <Label Text="Tap 'New Request' above to submit your first day off request!"
                               TextColor="#888888"
                               FontSize="13"
                               HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Requests List -->
                <CollectionView ItemsSource="{Binding MyRequests}"
                                IsVisible="{Binding HasRequests}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#444444"
                                   BorderColor="#555555"
                                   CornerRadius="8"
                                   Padding="15"
                                   Margin="0,0,0,10">
                                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                    <!-- Date and Time -->
                                    <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                                        <Label Text="{Binding DisplayDate}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="White" />
                                        <Label Text="{Binding DisplayTimeRange}"
                                               FontSize="14"
                                               TextColor="#AAAAAA" />
                                    </VerticalStackLayout>

                                    <!-- Status Badge -->
                                    <Frame Grid.Row="0" Grid.Column="1"
                                           BackgroundColor="{Binding StatusColor}"
                                           CornerRadius="12"
                                           Padding="10,5"
                                           VerticalOptions="Center"
                                           HasShadow="False">
                                        <Label Text="{Binding DisplayStatus}"
                                               FontSize="12"
                                               TextColor="White"
                                               FontAttributes="Bold" />
                                    </Frame>

                                    <!-- Reason (if provided) -->
                                    <Label Grid.Row="1" Grid.ColumnSpan="2"
                                           Text="{Binding Reason, StringFormat='Reason: {0}'}"
                                           IsVisible="{Binding Reason, Converter={StaticResource NotNullConverter}}"
                                           FontSize="13"
                                           TextColor="#CCCCCC"
                                           Margin="0,8,0,0" />

                                    <!-- Manager Response (if provided) -->
                                    <Frame Grid.Row="2" Grid.ColumnSpan="2"
                                           BackgroundColor="#333333"
                                           BorderColor="Transparent"
                                           CornerRadius="4"
                                           Padding="10"
                                           Margin="0,8,0,0"
                                           IsVisible="{Binding ManagerReason, Converter={StaticResource NotNullConverter}}">
                                        <Label Text="{Binding ManagerReason, StringFormat='Manager: {0}'}"
                                               FontSize="13"
                                               TextColor="#87CEEB"
                                               FontAttributes="Italic" />
                                    </Frame>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <controls:NavigationBar Grid.Row="2" />
    </Grid>
</ContentPage>
