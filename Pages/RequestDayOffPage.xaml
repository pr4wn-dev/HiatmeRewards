<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:HiatMeApp.Controls"
             xmlns:converters="clr-namespace:HiatMeApp.Converters"
             x:Class="HiatMeApp.RequestDayOffPage"
             Title="{Binding Title}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid RowDefinitions="*,Auto">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" Spacing="12">
                <Label Text="Request a Day Off"
                       FontSize="24"
                       HorizontalOptions="Center" />

                <DatePicker Date="{Binding SelectedDate}"
                            MinimumDate="{Binding MinimumDate}" />

                <Editor Placeholder="Reason (optional)"
                        AutoSize="TextChanges"
                        Text="{Binding Reason}" />

                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   HorizontalOptions="Center" />

                <Button Text="Submit Request"
                        Command="{Binding SubmitRequestCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}" />
            </VerticalStackLayout>
        </ScrollView>

        <controls:NavigationBar Grid.Row="1" />
    </Grid>
</ContentPage>


