<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:HiatMeApp.Controls"
             xmlns:converters="clr-namespace:HiatMeApp.Converters"
             x:Class="HiatMeApp.RequestDayOffPage"
             Title="{Binding Title}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid RowDefinitions="Auto,*,Auto">
        <controls:TopBar Grid.Row="0" />
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="18">
                <Label Text="Request a Day Off"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,10,0,10" />
                <BoxView HeightRequest="2"
                         BackgroundColor="#007BFF"
                         HorizontalOptions="FillAndExpand"
                         Margin="0,0,0,20" />

                <Label Text="Select Date" 
                       FontSize="18"
                       TextColor="#007BFF"
                       Margin="0,0,0,5" />
                <DatePicker Date="{Binding SelectedDate}"
                            MinimumDate="{Binding MinimumDate}"
                            BackgroundColor="#444"
                            TextColor="White" />

                <Label Text="Optional: pick a time range if you don't need the whole day off."
                       FontSize="16"
                       TextColor="#cccccc"
                       HorizontalOptions="Center"
                       Margin="0,10,0,10" />

                <HorizontalStackLayout Spacing="15"
                                       HorizontalOptions="Center">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Start Time"
                               FontSize="16"
                               TextColor="#007BFF"
                               HorizontalOptions="Center" />
                        <TimePicker Time="{Binding StartTime}"
                                    Format="HH:mm"
                                    BackgroundColor="#444"
                                    TextColor="White" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="End Time"
                               FontSize="16"
                               TextColor="#007BFF"
                               HorizontalOptions="Center" />
                        <TimePicker Time="{Binding EndTime}"
                                    Format="HH:mm"
                                    BackgroundColor="#444"
                                    TextColor="White" />
                    </VerticalStackLayout>
                </HorizontalStackLayout>

                <Label Text="Reason (optional)" 
                       FontSize="18"
                       TextColor="#007BFF"
                       Margin="0,10,0,5" />
                <Editor Placeholder="Enter reason for day off request..."
                        AutoSize="TextChanges"
                        Text="{Binding Reason}"
                        BackgroundColor="#444"
                        TextColor="White"
                        PlaceholderColor="#AAAAAA"
                        MinimumHeightRequest="100" />

                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   Color="White"
                                   HorizontalOptions="Center"
                                   Margin="0,10,0,10" />

                <Button Text="Submit Request"
                        FontSize="18"
                        Command="{Binding SubmitRequestCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                        BackgroundColor="#007bff"
                        TextColor="White"
                        Margin="0,10,0,0" />
            </VerticalStackLayout>
        </ScrollView>

        <controls:NavigationBar Grid.Row="2" />
    </Grid>
</ContentPage>


