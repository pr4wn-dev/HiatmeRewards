<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HiatMeApp.SplashPage"
             BackgroundColor="#FFFFFF"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Spacing="25">
        
        <!-- Dog Image -->
        <Image Source="dog.png"
               WidthRequest="160"
               HeightRequest="160"
               Aspect="AspectFit"
               HorizontalOptions="Center" />
        
        <!-- HIATME text - black to match dog -->
        <Label Text="HIATME"
               FontSize="52"
               FontAttributes="Bold"
               TextColor="#000000"
               HorizontalOptions="Center"
               CharacterSpacing="4" />
        
        <!-- Powered by AI - dark gray -->
        <Label Text="POWERED BY AI"
               FontSize="16"
               TextColor="#374151"
               HorizontalOptions="Center"
               CharacterSpacing="3" />
        
        <!-- Loading indicator - dark -->
        <ActivityIndicator IsRunning="True"
                           Color="#374151"
                           WidthRequest="36"
                           HeightRequest="36" />
    </VerticalStackLayout>
</ContentPage>
