<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HiatMeApp.ViewLogPage"
             Title="Vehicle Page Log"
             BackgroundColor="#333333"
             Shell.NavBarIsVisible="False">
    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <Label Text="Vehicle Page Log"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               Margin="0,20,0,10"
               Grid.Row="0" />
        <HorizontalStackLayout Grid.Row="1" 
                                Spacing="10" 
                                HorizontalOptions="Center"
                                Margin="20,0,20,10">
            <Button Text="Copy Log"
                    Clicked="OnCopyClicked"
                    BackgroundColor="#007bff"
                    TextColor="White"
                    Padding="20,10" />
            <Button Text="Clear Log"
                    Clicked="OnClearClicked"
                    BackgroundColor="#dc3545"
                    TextColor="White"
                    Padding="20,10" />
        </HorizontalStackLayout>
        <ScrollView Grid.Row="2" Margin="20">
            <Editor x:Name="LogEditor"
                    IsReadOnly="True"
                    BackgroundColor="#222"
                    TextColor="White"
                    FontFamily="Courier"
                    FontSize="12" />
        </ScrollView>
        <Label x:Name="StatusLabel"
               Grid.Row="3"
               Text=""
               FontSize="14"
               TextColor="#28a745"
               HorizontalOptions="Center"
               Margin="0,10,0,20" />
    </Grid>
</ContentPage>

