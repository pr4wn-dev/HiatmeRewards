<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HiatMeApp.ViewLogPage"
             Title="Vehicle Page Log"
             BackgroundColor="#333333"
             Shell.NavBarIsVisible="False">
    <Grid RowDefinitions="Auto,*">
        <Label Text="Vehicle Page Log"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               Margin="0,20,0,10"
               Grid.Row="0" />
        <ScrollView Grid.Row="1" Margin="20">
            <Editor x:Name="LogEditor"
                    IsReadOnly="True"
                    BackgroundColor="#222"
                    TextColor="White"
                    FontFamily="Courier"
                    FontSize="12" />
        </ScrollView>
    </Grid>
</ContentPage>

