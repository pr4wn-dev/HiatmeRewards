<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HiatMeApp.Controls"
             xmlns:converters="clr-namespace:HiatMeApp.Converters"
             x:Class="HiatMeApp.VehiclePage"
             Title="{Binding Title}"
             BackgroundColor="#333333"
             Shell.NavBarIsVisible="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:NotNullConverter x:Key="NotNullConverter" />
            <converters:IsNullConverter x:Key="IsNullConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid RowDefinitions="Auto,*,Auto">
        <local:TopBar Grid.Row="0" />
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="{Binding VehicleStatusTitle}" 
                       FontSize="26" 
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center" 
                       Margin="0,10,0,0" />
                <Label Text="{Binding VehicleStatusSubtitle}"
                       FontSize="14"
                       TextColor="#AAAAAA"
                       HorizontalOptions="Center"
                       Margin="0,2,0,5"
                       IsVisible="{Binding VehicleStatusSubtitle, Converter={StaticResource NotNullConverter}}" />
                <BoxView HeightRequest="2"
                         BackgroundColor="{Binding VehicleHeaderColor}"
                         HorizontalOptions="FillAndExpand"
                         Margin="0,0,0,15" />

                <!-- Vehicle Card -->
                <Frame IsVisible="{Binding Vehicle, Converter={StaticResource NotNullConverter}}"
                       Padding="0" 
                       BorderColor="#555555" 
                       BackgroundColor="#3A3A3A"
                       CornerRadius="12"
                       Margin="0,0,0,15">
                    <VerticalStackLayout Spacing="0">
                        <!-- Vehicle Header -->
                        <Frame BackgroundColor="{Binding VehicleHeaderColor}"
                               CornerRadius="12"
                               Padding="20"
                               Margin="0"
                               HasShadow="False">
                            <Grid ColumnDefinitions="Auto,*">
                                <Label Grid.Column="0"
                                       Text="🚗"
                                       FontSize="40"
                                       VerticalOptions="Center" />
                                <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0" VerticalOptions="Center">
                                    <Label Text="{Binding Vehicle.Make, TargetNullValue=''}" 
                                           FontSize="24" 
                                           FontAttributes="Bold"
                                           TextColor="White" />
                                    <Label Text="{Binding Vehicle.Model, TargetNullValue=''}" 
                                           FontSize="18"
                                           TextColor="#E0E0E0" />
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>

                        <!-- Vehicle Details -->
                        <VerticalStackLayout Padding="20" Spacing="12">
                            <!-- VIN Row -->
                            <Grid ColumnDefinitions="Auto,*">
                                <Label Grid.Column="0"
                                       Text="VIN Ending:"
                                       FontSize="14"
                                       TextColor="#888888"
                                       WidthRequest="110" />
                                <Label Grid.Column="1"
                                       Text="{Binding Vehicle.LastSixVin, TargetNullValue='—'}" 
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                            </Grid>
                            
                            <BoxView HeightRequest="1" BackgroundColor="#444444" />

                            <!-- License Plate Row -->
                            <Grid ColumnDefinitions="Auto,*">
                                <Label Grid.Column="0"
                                       Text="License Plate:"
                                       FontSize="14"
                                       TextColor="#888888"
                                       WidthRequest="110" />
                                <Label Grid.Column="1"
                                       Text="{Binding Vehicle.LicensePlate, TargetNullValue='—'}" 
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                            </Grid>

                            <BoxView HeightRequest="1" BackgroundColor="#444444" />

                            <!-- Year Row -->
                            <Grid ColumnDefinitions="Auto,*">
                                <Label Grid.Column="0"
                                       Text="Year:"
                                       FontSize="14"
                                       TextColor="#888888"
                                       WidthRequest="110" />
                                <Label Grid.Column="1"
                                       Text="{Binding Vehicle.Year, TargetNullValue='—'}" 
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                            </Grid>

                            <BoxView HeightRequest="1" BackgroundColor="#444444" />

                            <!-- Color Row -->
                            <Grid ColumnDefinitions="Auto,*">
                                <Label Grid.Column="0"
                                       Text="Color:"
                                       FontSize="14"
                                       TextColor="#888888"
                                       WidthRequest="110" />
                                <Label Grid.Column="1"
                                       Text="{Binding Vehicle.Color, TargetNullValue='—'}" 
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                            </Grid>

                            <BoxView HeightRequest="1" BackgroundColor="#444444" />

                            <!-- Full VIN Row -->
                            <Grid ColumnDefinitions="Auto,*">
                                <Label Grid.Column="0"
                                       Text="Full VIN:"
                                       FontSize="14"
                                       TextColor="#888888"
                                       WidthRequest="110" />
                                <Label Grid.Column="1"
                                       Text="{Binding Vehicle.Vin, TargetNullValue='—'}" 
                                       FontSize="14"
                                       TextColor="#CCCCCC" />
                            </Grid>
                        </VerticalStackLayout>

                        <!-- Mileage Section -->
                        <Frame BackgroundColor="#444444"
                               BorderColor="Transparent"
                               CornerRadius="8"
                               Padding="15"
                               Margin="15,0,15,15"
                               IsVisible="{Binding Vehicle.MileageRecord, Converter={StaticResource NotNullConverter}}">
                            <VerticalStackLayout Spacing="10">
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="📊 Mileage Record"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#87CEEB" />
                                    <Frame Grid.Column="1"
                                           BackgroundColor="#28a745"
                                           CornerRadius="10"
                                           Padding="8,4"
                                           IsVisible="{Binding IsMileageComplete}"
                                           HasShadow="False">
                                        <Label Text="✓ Completed"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="White" />
                                    </Frame>
                                </Grid>
                                <Grid ColumnDefinitions="*,*">
                                    <VerticalStackLayout Grid.Column="0" Spacing="2">
                                        <Label Text="Start Miles"
                                               FontSize="12"
                                               TextColor="#888888" />
                                        <Label Text="{Binding Vehicle.MileageRecord.StartMiles, StringFormat='{0:F2}'}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#28a745" />
                                    </VerticalStackLayout>
                                    <VerticalStackLayout Grid.Column="1" Spacing="2">
                                        <Label Text="End Miles"
                                               FontSize="12"
                                               TextColor="#888888" />
                                        <Label Text="{Binding Vehicle.MileageRecord.EndingMiles, StringFormat='{0:F2}', TargetNullValue='—'}"
                                               IsVisible="{Binding Vehicle.MileageRecord.EndingMiles, Converter={StaticResource NotNullConverter}}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#dc3545" />
                                        <Label Text="Not recorded"
                                               IsVisible="{Binding Vehicle.MileageRecord.EndingMiles, Converter={StaticResource IsNullConverter}}"
                                               FontSize="14"
                                               TextColor="#888888" />
                                    </VerticalStackLayout>
                                </Grid>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Quick Actions -->
                        <Grid ColumnDefinitions="*,*" 
                              ColumnSpacing="10" 
                              Padding="15,0,15,15">
                            <Frame Grid.Column="0"
                                   BackgroundColor="#444444"
                                   BorderColor="#555555"
                                   CornerRadius="10"
                                   Padding="15">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ReportCameraIssueCommand}" />
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                                    <Label Text="📹"
                                           FontSize="32"
                                           HorizontalOptions="Center" />
                                    <Label Text="Camera/Chip"
                                           FontSize="13"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           HorizontalOptions="Center" />
                                    <Label Text="Report Issue"
                                           FontSize="11"
                                           TextColor="#AAAAAA"
                                           HorizontalOptions="Center" />
                                </VerticalStackLayout>
                            </Frame>
                            <Frame Grid.Column="1"
                                   BackgroundColor="#444444"
                                   BorderColor="#555555"
                                   CornerRadius="10"
                                   Padding="15">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding GoToIssuesCommand}" />
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                                    <Label Text="⚠️"
                                           FontSize="32"
                                           HorizontalOptions="Center" />
                                    <Label Text="All Issues"
                                           FontSize="13"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           HorizontalOptions="Center" />
                                    <Label Text="View List"
                                           FontSize="11"
                                           TextColor="#AAAAAA"
                                           HorizontalOptions="Center" />
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- No Vehicle Message -->
                <Frame IsVisible="{Binding NoVehicleMessageVisible}"
                       BackgroundColor="#444444"
                       BorderColor="#555555"
                       CornerRadius="10"
                       Padding="30">
                    <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                        <Label Text="🚫"
                               FontSize="50"
                               HorizontalOptions="Center" />
                        <Label Text="No Vehicle Assigned"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center" />
                        <Label Text="Assign a vehicle to get started with your daily tasks."
                               FontSize="14"
                               TextColor="#AAAAAA"
                               HorizontalTextAlignment="Center"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Assign Vehicle Button -->
                <Button Text="🚗 Assign/Change Vehicle"
                        FontSize="18"
                        IsVisible="{Binding IsVehicleButtonVisible}"
                        Command="{Binding AssignVehicleByVinCommand}"
                        BackgroundColor="#007bff"
                        TextColor="White"
                        CornerRadius="8"
                        Padding="20,15"
                        HorizontalOptions="FillAndExpand"
                        Margin="0,10,0,10" />
            </VerticalStackLayout>
        </ScrollView>
        <local:NavigationBar Grid.Row="2" BindingContext="{Binding .}" />
    </Grid>
</ContentPage>
