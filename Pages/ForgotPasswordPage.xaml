<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:HiatMeApp.Controls"
             x:Class="HiatMeApp.ForgotPasswordPage"
             Title="{Binding Title}"
             BackgroundColor="#333333"
             Shell.NavBarIsVisible="False">
    <ContentPage.Resources>
        <Style x:Key="FormButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#007BFF" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="HeightRequest" Value="48" />
            <Setter Property="Margin" Value="0,6" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#0056B3" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="#007BFF" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="Margin" Value="0,2" />
            <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="TextColor" Value="#0056B3" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
        <Style x:Key="EntryStyle" TargetType="Entry">
            <Setter Property="BackgroundColor" Value="#333333" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="PlaceholderColor" Value="#AAAAAA" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="HeightRequest" Value="48" />
            <Setter Property="Margin" Value="0,6" />
            <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            <Setter Property="ClearButtonVisibility" Value="WhileEditing" />
        </Style>
    </ContentPage.Resources>
    <Grid RowDefinitions="Auto,*,Auto">
        <controls:TopBar Grid.Row="0" />
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="12"
                                Padding="20,40,20,30"
                                VerticalOptions="CenterAndExpand"
                                HorizontalOptions="FillAndExpand">
        <Label Text="Forgot Password"
               FontSize="24"
               FontFamily="Arial"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               Margin="0,6" />
        <BoxView HeightRequest="1"
                 BackgroundColor="#007BFF"
                 HorizontalOptions="FillAndExpand"
                 Margin="0,6" />
        <Label Text="Enter your email to receive a reset link."
               FontSize="16"
               FontFamily="Arial"
               TextColor="White"
               HorizontalOptions="Center"
               Margin="0,6" />
        <Grid RowDefinitions="Auto"
              RowSpacing="6"
              HorizontalOptions="FillAndExpand">
            <Entry Grid.Row="0"
                   Placeholder="Email"
                   Text="{Binding Email}"
                   Keyboard="Email"
                   Style="{StaticResource EntryStyle}" />
        </Grid>
        <Button Text="Send Reset Link"
                Command="{Binding SendResetCommand}"
                Style="{StaticResource FormButtonStyle}" />
        <Label Text="{Binding Message}"
               TextColor="#F2A8AE"
               FontSize="14"
               FontFamily="Arial"
               HorizontalOptions="Center"
               Margin="0,2">
            <Label.Triggers>
                <DataTrigger TargetType="Label"
                             Binding="{Binding Message}"
                             Value="">
                    <Setter Property="IsVisible" Value="False" />
                </DataTrigger>
            </Label.Triggers>
        </Label>
        <Button Text="Back to Login"
                Command="{Binding GoToLoginCommand}"
                Style="{StaticResource LinkButtonStyle}" />
            </VerticalStackLayout>
        </ScrollView>
        <controls:NavigationBar Grid.Row="2" />
    </Grid>
</ContentPage>