<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:HiatMeApp.Controls"
             x:Class="HiatMeApp.LoginPage"
             Title="{Binding Title}"
             BackgroundColor="#333333">
    <ContentPage.Resources>
        <Style x:Key="FormButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#007BFF" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="HeightRequest" Value="50" />
            <Setter Property="Margin" Value="0,15" />
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#0056B3" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
        <Style x:Key="ToggleButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#555555" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="HeightRequest" Value="48" />
            <Setter Property="Margin" Value="4,6" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#0056B3" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
        <Style x:Key="ActiveToggleButtonStyle" TargetType="Button" BasedOn="{StaticResource ToggleButtonStyle}">
            <Setter Property="BackgroundColor" Value="#007BFF" />
        </Style>
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="#007BFF" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="Margin" Value="0,8" />
            <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="TextColor" Value="#0056B3" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
        <Style x:Key="EntryStyle" TargetType="Entry">
            <Setter Property="BackgroundColor" Value="#444444" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="PlaceholderColor" Value="#AAAAAA" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="HeightRequest" Value="50" />
            <Setter Property="Margin" Value="0,8" />
            <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            <Setter Property="ClearButtonVisibility" Value="WhileEditing" />
        </Style>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="TextColor" Value="#007BFF" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="Margin" Value="0,15,0,5" />
        </Style>
    </ContentPage.Resources>
    <Grid RowDefinitions="Auto,*">
        <controls:TopBar Grid.Row="0" />
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="15"
                                Padding="20,30,20,30"
                                VerticalOptions="CenterAndExpand"
                                HorizontalOptions="FillAndExpand">
                <Grid ColumnDefinitions="*,*"
                      HorizontalOptions="FillAndExpand"
                      Margin="0,0,0,10">
                    <Button Grid.Column="0"
                            Text="Login"
                            Style="{StaticResource ActiveToggleButtonStyle}" />
                    <Button Grid.Column="1"
                            Text="Sign Up"
                            Command="{Binding GoToRegisterCommand}"
                            Style="{StaticResource ToggleButtonStyle}" />
                </Grid>
                <Label Text="Login Form"
                       FontSize="24"
                       FontFamily="Arial"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,10" />
                <BoxView HeightRequest="2"
                         BackgroundColor="#007BFF"
                         HorizontalOptions="FillAndExpand"
                         Margin="0,0,0,20" />
                <VerticalStackLayout Spacing="8">
                    <Label Text="Email"
                           Style="{StaticResource LabelStyle}" />
                    <Border Stroke="#666666"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 4,4,4,4"
                            BackgroundColor="#444444"
                            Padding="12,0">
                        <Entry Text="{Binding Email}"
                               Keyboard="Email"
                               BackgroundColor="Transparent"
                               TextColor="White"
                               PlaceholderColor="#AAAAAA"
                               FontSize="18"
                               FontFamily="Arial"
                               HeightRequest="50"
                               Margin="0,8"
                               ClearButtonVisibility="WhileEditing" />
                    </Border>
                </VerticalStackLayout>
                <VerticalStackLayout Spacing="8">
                    <Label Text="Password"
                           Style="{StaticResource LabelStyle}" />
                    <Border Stroke="#666666"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 4,4,4,4"
                            BackgroundColor="#444444"
                            Padding="12,0">
                        <Entry Text="{Binding Password}"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               TextColor="White"
                               PlaceholderColor="#AAAAAA"
                               FontSize="18"
                               FontFamily="Arial"
                               HeightRequest="50"
                               Margin="0,8"
                               ClearButtonVisibility="WhileEditing" />
                    </Border>
                </VerticalStackLayout>
                <Button Text="Login"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource FormButtonStyle}" />
                <Label Text="{Binding Message}"
                       TextColor="#F2A8AE"
                       FontSize="16"
                       FontFamily="Arial"
                       HorizontalOptions="Center"
                       Margin="0,5">
                    <Label.Triggers>
                        <DataTrigger TargetType="Label"
                                     Binding="{Binding Message}"
                                     Value="">
                            <Setter Property="IsVisible" Value="False" />
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
                <Button Text="Forgot Password?"
                        Command="{Binding GoToForgotPasswordCommand}"
                        Style="{StaticResource LinkButtonStyle}" />
                <Label Text="Don't have an account? Sign up"
                       FontSize="16"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,10">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Don't have an account? " TextColor="White" />
                            <Span Text="Sign up" TextColor="#007BFF" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>