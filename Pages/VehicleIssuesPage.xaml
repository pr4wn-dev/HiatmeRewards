<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:HiatMeApp.Controls"
             x:Class="HiatMeApp.VehicleIssuesPage"
             Title="{Binding Title}">
    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <controls:TopBar Grid.Row="0" />
        <Button Text="Report Issue"
                FontSize="18"
                Clicked="OnReportIssueClicked"
                BackgroundColor="#007bff"
                TextColor="White"
                HorizontalOptions="Center"
                Margin="20,15,20,10"
                Grid.Row="1" />
        <Grid RowDefinitions="Auto,*" 
              IsVisible="{Binding IsBusy}"
              Grid.Row="2">
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              Color="White"
                              HorizontalOptions="Center"
                              VerticalOptions="Center"
                              Margin="0,20,0,0" />
            <Label Text="Loading vehicle issues..."
                   FontSize="18"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="0,60,0,0"
                   Grid.Row="1" />
        </Grid>
        <CollectionView ItemsSource="{Binding Issues}"
                        Grid.Row="2"
                        Margin="20">
            <CollectionView.EmptyView>
                <Label Text="No issues found for this vehicle."
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontSize="18"
                       TextColor="#cccccc" />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15" 
                           Margin="0,0,0,12"
                           BorderColor="#666"
                           BackgroundColor="#444"
                           CornerRadius="8">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="{Binding IssueType}"
                                   FontAttributes="Bold"
                                   FontSize="20"
                                   TextColor="White" />
                            <Label Text="{Binding Description, FallbackValue='No description'}"
                                   FontSize="18"
                                   TextColor="White" />
                            <Label Text="{Binding CreatedAt, StringFormat='Reported: {0}'}"
                                   FontSize="16"
                                   TextColor="#cccccc" />
                            <Label Text="{Binding Status, StringFormat='Status: {0}'}"
                                   FontSize="16"
                                   TextColor="#cccccc" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <controls:NavigationBar Grid.Row="3" />
    </Grid>
</ContentPage>