<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:HiatMeApp.Controls"
             xmlns:converters="clr-namespace:HiatMeApp.Converters"
             x:Class="HiatMeApp.VehicleIssuesPage"
             Title="{Binding Title}"
             BackgroundColor="#333333"
             Shell.NavBarIsVisible="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <converters:NotNullConverter x:Key="NotNullConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <Grid RowDefinitions="Auto,*,Auto">
        <controls:TopBar Grid.Row="0" />
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="Vehicle Issues" 
                       FontSize="26" 
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center" 
                       Margin="0,10,0,5" />
                <BoxView HeightRequest="2"
                         BackgroundColor="#ffc107"
                         HorizontalOptions="FillAndExpand"
                         Margin="0,0,0,15" />

                <!-- Report Issue Button -->
                <Frame BackgroundColor="#3A3A3A"
                       BorderColor="#555555"
                       CornerRadius="10"
                       Padding="15"
                       Margin="0,0,0,10">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Label Grid.Column="0"
                               Text="âš ï¸"
                               FontSize="28"
                               VerticalOptions="Center" />
                        <VerticalStackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center">
                            <Label Text="Found a problem?"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="White" />
                            <Label Text="Report it right away"
                                   FontSize="12"
                                   TextColor="#AAAAAA" />
                        </VerticalStackLayout>
                        <Button Grid.Column="2"
                                Text="Report Issue"
                                FontSize="14"
                                BackgroundColor="#dc3545"
                                TextColor="White"
                                Padding="15,10"
                                CornerRadius="8"
                                Clicked="OnReportIssueClicked" />
                    </Grid>
                </Frame>

                <!-- Loading State -->
                <Frame BackgroundColor="#444444"
                       BorderColor="#555555"
                       CornerRadius="10"
                       Padding="30"
                       IsVisible="{Binding IsBusy}"
                       Margin="0,10,0,10">
                    <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                        <ActivityIndicator IsRunning="{Binding IsBusy}"
                                          Color="#ffc107"
                                          HorizontalOptions="Center" />
                        <Label Text="Loading vehicle issues..."
                               FontSize="16"
                               TextColor="#AAAAAA"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Issues Section Header -->
                <Grid ColumnDefinitions="*,Auto" 
                      Margin="0,10,0,5"
                      IsVisible="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                    <Label Grid.Column="0"
                           Text="Reported Issues"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#87CEEB"
                           VerticalOptions="Center" />
                    <Button Grid.Column="1"
                            Text="â†» Refresh"
                            FontSize="12"
                            BackgroundColor="#6c757d"
                            TextColor="White"
                            Padding="12,6"
                            CornerRadius="6"
                            Command="{Binding RefreshCommand}" />
                </Grid>

                <!-- Issues List -->
                <CollectionView ItemsSource="{Binding Issues}"
                               IsVisible="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                    <CollectionView.EmptyView>
                        <Frame BackgroundColor="#444444"
                               BorderColor="#555555"
                               CornerRadius="10"
                               Padding="30">
                            <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                                <Label Text="âœ¨"
                                       FontSize="50"
                                       HorizontalOptions="Center" />
                                <Label Text="No Issues Found"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center" />
                                <Label Text="Great! Your vehicle has no reported issues."
                                       FontSize="14"
                                       TextColor="#AAAAAA"
                                       HorizontalTextAlignment="Center"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Frame>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="0" 
                                   Margin="0,0,0,12"
                                   BorderColor="#555555"
                                   BackgroundColor="#3A3A3A"
                                   CornerRadius="10">
                                <VerticalStackLayout Spacing="0">
                                    <!-- Issue Header -->
                                    <Grid BackgroundColor="#444444"
                                          Padding="15"
                                          ColumnDefinitions="*,Auto">
                                        <Label Grid.Column="0"
                                               Text="{Binding IssueType}"
                                               FontAttributes="Bold"
                                               FontSize="18"
                                               TextColor="White"
                                               VerticalOptions="Center" />
                                        <!-- Status Badge -->
                                        <Frame Grid.Column="1"
                                               BackgroundColor="{Binding StatusColor}"
                                               CornerRadius="12"
                                               Padding="12,5"
                                               HasShadow="False"
                                               VerticalOptions="Center">
                                            <Label Text="{Binding Status}"
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   TextColor="White" />
                                        </Frame>
                                    </Grid>
                                    
                                    <!-- Issue Details -->
                                    <VerticalStackLayout Padding="15" Spacing="8">
                                        <Label Text="{Binding Description, FallbackValue='No description provided'}"
                                               FontSize="15"
                                               TextColor="#CCCCCC"
                                               LineBreakMode="WordWrap" />
                                        
                                        <BoxView HeightRequest="1" BackgroundColor="#444444" Margin="0,5,0,5" />
                                        
                                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" RowSpacing="6">
                                            <Label Grid.Row="0" Grid.Column="0"
                                                   Text="ðŸ‘¤ Submitted by:"
                                                   FontSize="13"
                                                   TextColor="#888888" />
                                            <Label Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding DisplayReporter}"
                                                   FontSize="13"
                                                   FontAttributes="Bold"
                                                   TextColor="#87CEEB"
                                                   Margin="5,0,0,0" />
                                            <Label Grid.Row="1" Grid.Column="0"
                                                   Text="ðŸ“… Reported:"
                                                   FontSize="13"
                                                   TextColor="#888888" />
                                            <Label Grid.Row="1" Grid.Column="1"
                                                   Text="{Binding CreatedAt}"
                                                   FontSize="13"
                                                   TextColor="#AAAAAA"
                                                   Margin="5,0,0,0" />
                                        </Grid>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
        <controls:NavigationBar Grid.Row="2" />
    </Grid>
</ContentPage>
