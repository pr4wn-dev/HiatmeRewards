<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HiatMeApp.Controls"
             x:Class="HiatMeApp.HomePage"
             Title="{Binding Title}">
    <Grid RowDefinitions="*,Auto">
        <VerticalStackLayout Padding="20" Spacing="10" Grid.Row="0">
            <Label Text="Welcome to HiatMe" FontSize="24" HorizontalOptions="Center" />
            <Label Text="This is your home page." HorizontalOptions="Center" />
        </VerticalStackLayout>
        <local:NavigationBar Grid.Row="1" />
    </Grid>
</ContentPage>