<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HiatMeApp.Controls"
             xmlns:converters="clr-namespace:HiatMeApp.Converters"
             x:Class="HiatMeApp.HomePage"
             Title="{Binding Title}"
             BackgroundColor="#333333"
             Shell.NavBarIsVisible="False">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <Grid RowDefinitions="Auto,*,Auto">
        <local:TopBar Grid.Row="0" />
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15">
                
                <!-- Welcome Section (Shown for all users) -->
                <Frame BackgroundColor="#3a3a3a"
                       BorderColor="#007BFF"
                       CornerRadius="12"
                       Padding="20"
                       Margin="0,10,0,0">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="👋 Welcome back!"
                               FontSize="16"
                               TextColor="#87CEEB" />
                        <Label Text="{Binding UserName, TargetNullValue='User'}"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="White" />
                        <Label Text="{Binding CurrentDate}"
                               FontSize="14"
                               TextColor="#AAAAAA" />
                    </VerticalStackLayout>
                </Frame>

                <!-- CLIENT ROLE: Account Pending Message -->
                <VerticalStackLayout IsVisible="{Binding IsClient}" Spacing="15">
                    
                    <!-- Account Status Card -->
                    <Frame BackgroundColor="#2d3748"
                           BorderColor="#4299e1"
                           CornerRadius="16"
                           Padding="24"
                           Margin="0,10,0,0">
                        <VerticalStackLayout Spacing="16" HorizontalOptions="Center">
                            <Frame BackgroundColor="#1e40af"
                                   CornerRadius="40"
                                   WidthRequest="80"
                                   HeightRequest="80"
                                   Padding="0"
                                   HorizontalOptions="Center"
                                   HasShadow="True">
                                <Label Text="⏳"
                                       FontSize="40"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Frame>
                            <Label Text="Account Pending Approval"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="Your account is currently set as a Client. Once a manager or owner reviews and elevates your account, you'll have access to all app features."
                                   FontSize="14"
                                   TextColor="#a0aec0"
                                   HorizontalTextAlignment="Center"
                                   LineBreakMode="WordWrap" />
                        </VerticalStackLayout>
                    </Frame>
                    
                    <!-- What to Expect Card -->
                    <Frame BackgroundColor="#444444"
                           BorderColor="#555555"
                           CornerRadius="12"
                           Padding="20">
                        <VerticalStackLayout Spacing="12">
                            <Label Text="🚀 What's Coming"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#87CEEB" />
                            <Label Text="Once your account is upgraded, you'll be able to:"
                                   FontSize="14"
                                   TextColor="#AAAAAA" />
                            
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12" RowSpacing="10" Margin="0,8,0,0">
                                <Label Grid.Row="0" Grid.Column="0" Text="🚗" FontSize="20" VerticalOptions="Center" />
                                <Label Grid.Row="0" Grid.Column="1" Text="Assign and manage your vehicle" TextColor="White" FontSize="14" VerticalOptions="Center" />
                                
                                <Label Grid.Row="1" Grid.Column="0" Text="⚠️" FontSize="20" VerticalOptions="Center" />
                                <Label Grid.Row="1" Grid.Column="1" Text="Report vehicle issues" TextColor="White" FontSize="14" VerticalOptions="Center" />
                                
                                <Label Grid.Row="2" Grid.Column="0" Text="📅" FontSize="20" VerticalOptions="Center" />
                                <Label Grid.Row="2" Grid.Column="1" Text="Request days off" TextColor="White" FontSize="14" VerticalOptions="Center" />
                                
                                <Label Grid.Row="3" Grid.Column="0" Text="✅" FontSize="20" VerticalOptions="Center" />
                                <Label Grid.Row="3" Grid.Column="1" Text="Track your daily mileage" TextColor="White" FontSize="14" VerticalOptions="Center" />
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>
                    
                    <!-- Profile Action for Clients -->
                    <Frame BackgroundColor="#444444"
                           BorderColor="#555555"
                           CornerRadius="10"
                           Padding="0">
                        <Grid Padding="15" ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0"
                                   Text="👤"
                                   FontSize="24"
                                   VerticalOptions="Center" />
                            <VerticalStackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center">
                                <Label Text="My Profile"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                                <Label Text="View and update your info"
                                       FontSize="12"
                                       TextColor="#AAAAAA" />
                            </VerticalStackLayout>
                            <Button Grid.Column="2"
                                    Text="→"
                                    FontSize="18"
                                    BackgroundColor="#007BFF"
                                    TextColor="White"
                                    Padding="12,8"
                                    Command="{Binding GoToProfileCommand}" />
                        </Grid>
                    </Frame>
                    
                </VerticalStackLayout>

                <!-- NON-CLIENT ROLES: Full Dashboard -->
                <VerticalStackLayout IsVisible="{Binding IsClient, Converter={StaticResource InverseBooleanConverter}}" Spacing="15">
                    
                    <!-- Quick Stats Section -->
                    <Label Text="Quick Overview"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#87CEEB"
                           Margin="0,15,0,5" />

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12" RowSpacing="12">
                        <!-- Vehicle Status Card -->
                        <Frame Grid.Column="0"
                               BackgroundColor="#444444"
                               BorderColor="#555555"
                               CornerRadius="10"
                               Padding="15">
                            <VerticalStackLayout Spacing="8">
                                <Label Text="🚗"
                                       FontSize="28"
                                       HorizontalOptions="Center" />
                                <Label Text="Vehicle"
                                       FontSize="14"
                                       TextColor="#AAAAAA"
                                       HorizontalOptions="Center" />
                                <Label Text="{Binding VehicleStatus, TargetNullValue='Not Assigned'}"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalTextAlignment="Center"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Role Card -->
                        <Frame Grid.Column="1"
                               BackgroundColor="#444444"
                               BorderColor="#555555"
                               CornerRadius="10"
                               Padding="15">
                            <VerticalStackLayout Spacing="8">
                                <Label Text="👤"
                                       FontSize="28"
                                       HorizontalOptions="Center" />
                                <Label Text="Your Role"
                                       FontSize="14"
                                       TextColor="#AAAAAA"
                                       HorizontalOptions="Center" />
                                <Label Text="{Binding UserRole, TargetNullValue='User'}"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>

                    <!-- Quick Actions Section -->
                    <Label Text="Quick Actions"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#87CEEB"
                           Margin="0,20,0,5" />

                    <Frame BackgroundColor="#444444"
                           BorderColor="#555555"
                           CornerRadius="10"
                           Padding="0">
                        <VerticalStackLayout Spacing="0">
                            <!-- Vehicle Action -->
                            <Grid Padding="15" ColumnDefinitions="Auto,*,Auto">
                                <Label Grid.Column="0"
                                       Text="🚗"
                                       FontSize="24"
                                       VerticalOptions="Center" />
                                <VerticalStackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center">
                                    <Label Text="Vehicle"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="White" />
                                    <Label Text="Assign or view your vehicle"
                                           FontSize="12"
                                           TextColor="#AAAAAA" />
                                </VerticalStackLayout>
                                <Button Grid.Column="2"
                                        Text="→"
                                        FontSize="18"
                                        BackgroundColor="#007BFF"
                                        TextColor="White"
                                        Padding="12,8"
                                        Command="{Binding GoToVehicleCommand}" />
                            </Grid>
                            
                            <BoxView HeightRequest="1" BackgroundColor="#555555" />
                            
                            <!-- Report Issue Action -->
                            <Grid Padding="15" ColumnDefinitions="Auto,*,Auto">
                                <Label Grid.Column="0"
                                       Text="⚠️"
                                       FontSize="24"
                                       VerticalOptions="Center" />
                                <VerticalStackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center">
                                    <Label Text="Vehicle Issues"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="White" />
                                    <Label Text="Report or view issues"
                                           FontSize="12"
                                           TextColor="#AAAAAA" />
                                </VerticalStackLayout>
                                <Button Grid.Column="2"
                                        Text="→"
                                        FontSize="18"
                                        BackgroundColor="#ffc107"
                                        TextColor="Black"
                                        Padding="12,8"
                                        Command="{Binding GoToIssuesCommand}" />
                            </Grid>
                            
                            <BoxView HeightRequest="1" BackgroundColor="#555555" />
                            
                            <!-- Day Off Action -->
                            <Grid Padding="15" ColumnDefinitions="Auto,*,Auto">
                                <Label Grid.Column="0"
                                       Text="📅"
                                       FontSize="24"
                                       VerticalOptions="Center" />
                                <VerticalStackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center">
                                    <Label Text="Request Day Off"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="White" />
                                    <Label Text="Submit or view requests"
                                           FontSize="12"
                                           TextColor="#AAAAAA" />
                                </VerticalStackLayout>
                                <Button Grid.Column="2"
                                        Text="→"
                                        FontSize="18"
                                        BackgroundColor="#17a2b8"
                                        TextColor="White"
                                        Padding="12,8"
                                        Command="{Binding GoToRequestDayOffCommand}" />
                            </Grid>
                            
                            <BoxView HeightRequest="1" BackgroundColor="#555555" />
                            
                            <!-- Finish Day Action -->
                            <Grid Padding="15" ColumnDefinitions="Auto,*,Auto">
                                <Label Grid.Column="0"
                                       Text="✅"
                                       FontSize="24"
                                       VerticalOptions="Center" />
                                <VerticalStackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center">
                                    <Label Text="Finish Day"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="White" />
                                    <Label Text="Submit ending mileage"
                                           FontSize="12"
                                           TextColor="#AAAAAA" />
                                </VerticalStackLayout>
                                <Button Grid.Column="2"
                                        Text="→"
                                        FontSize="18"
                                        BackgroundColor="#28a745"
                                        TextColor="White"
                                        Padding="12,8"
                                        Command="{Binding GoToFinishDayCommand}" />
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>
                    
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
        <local:NavigationBar Grid.Row="2" />
    </Grid>
</ContentPage>
